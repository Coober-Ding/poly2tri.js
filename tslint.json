{
    "extends": "tslint:recommended",
    "rules": {
        "max-classes-per-file": false,
        "member-ordering": [
            true,
            {
                "order": "instance-sandwich"
            }
        ],
        "no-console": false,
        "trailing-comma": false,
        "no-consecutive-blank-lines": [
            true,
            2
        ],
        "interface-name": [
            false,
            "always-prefix"
        ],
        "array-type": [
            true,
            "generic"
        ]
    }
}
